{
  "extends": "../../../tsconfig-base.json",
  "compilerOptions": {
    // Output options
    "target": "es5",
    "module": "commonjs",
    "outDir": "../lib-cjs",
    //"noEmit": true,
    "sourceMap": true,
    "jsx": "react",
    // There is not typings for everything so some modules need to be any implicitly
    "noImplicitAny": false,
    "lib": [
      "es5",
      "dom",
      "es2015",
      "es2015.promise",
      "es2015.iterable",
      "es2015.symbol"
    ],
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["**/*"],
  "exclude": ["node_modules/**/"]
}
